{
    "name": "react-parallax",
    "author": "Richard Rutsche",
    "version": "3.0.3",
    "description": "A React Component for parallax effect working in client-side and server-side rendering environment",
    "repository": {
        "type": "git",
        "url": "https://github.com/rrutsche/react-parallax.git"
    },
    "main": "lib/index.js",
    "types": "@types/index.ts",
    "scripts": {
        "test": "jest",
        "test:watch": "npm run test -- --watch",
        "test:cover": "npm run test -- --coverage",
        "dev": "npx cross-env NODE_ENV=development webpack-dev-server --mode development --config webpack/dev.config.js",
        "build": "npx cross-env NODE_ENV=production webpack --mode production --config webpack/build.config.js",
        "lint": "tsc --noEmit && eslint ./src/**/*.{ts,tsx}",
        "format": "prettier --write \"*/**/*.{ts,tsx,js,json}\" \"*.js\"",
        "check-types": "tsc",
        "preversion": "npm test",
        "version": "npm run build && git add lib",
        "postversion": "git push && git push --tags"
    },
    "keywords": [
        "react",
        "reactjs",
        "parallax",
        "scroll",
        "jsx"
    ],
    "peerDependencies": {
        "react": "16.x.x",
        "react-dom": "16.x.x"
    },
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.6.2",
        "@babel/plugin-proposal-class-properties": "^7.5.5",
        "@babel/preset-env": "^7.6.2",
        "@babel/preset-react": "^7.0.0",
        "@types/jest": "^24.0.24",
        "@types/jsdom": "^12.2.4",
        "@types/node": "^12.7.8",
        "@types/react": "^16.9.2",
        "@types/react-dom": "^16.9.0",
        "@types/react-router-dom": "^5.1.0",
        "@typescript-eslint/eslint-plugin": "^2.2.0",
        "@typescript-eslint/parser": "^2.2.0",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^24.1.0",
        "babel-loader": "^8.0.6",
        "cross-env": "^6.0.3",
        "eslint": "^5.14.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-airbnb-typescript": "^4.0.1",
        "eslint-config-prettier": "^4.0.0",
        "eslint-plugin-destructuring": "^2.1.0",
        "eslint-plugin-import": "^2.7.0",
        "eslint-plugin-jest": "^22.3.0",
        "eslint-plugin-jsx-a11y": "^6.0.2",
        "eslint-plugin-react": "^7.1.0",
        "file-loader": "^4.2.0",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^1.3.1",
        "jest": "^24.1.0",
        "jsdom": "^13.2.0",
        "lint-staged": "^8.1.4",
        "prettier": "^1.7.4",
        "react": "^16.0.0",
        "react-dom": "^16.0.0",
        "react-hot-loader": "^4.12.14",
        "react-router-dom": "^4.3.1",
        "terser-webpack-plugin": "^2.1.2",
        "ts-jest": "^24.2.0",
        "ts-loader": "^6.2.0",
        "typescript": "^3.6.2",
        "webpack": "^4.41.0",
        "webpack-cli": "^3.3.9",
        "webpack-dev-server": "^3.8.2",
        "webpack-merge": "^4.2.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "post-merge": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{ts,tsx}": [
            "prettier --write",
            "eslint",
            "git add"
        ],
        "*.{json,css,scss}": [
            "prettier --write",
            "git add"
        ]
    }
}
